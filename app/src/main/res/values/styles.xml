<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TimelineItemButton">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="TimelineItemTitle" parent="TimelineItemButton">
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="ConfirmDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">

        <item name="windowMinWidthMinor">90%</item>


        <item name="android:textColorPrimary">#000000</item>

        <item name="colorAccent">#0accac</item>
    </style>
    <style name="NumberProgressBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="progress_max">100</item>
        <item name="progress_current">0</item>

        <item name="progress_unreached_color">#fff</item>
        <item name="progress_reached_color">@color/colorAccent</item>

        <item name="progress_text_size">10sp</item>
        <item name="progress_text_color">@color/colorAccent</item>

        <item name="progress_reached_bar_height">1.5dp</item>
        <item name="progress_unreached_bar_height">0.75dp</item>
    </style>
    <style name="DialogFragmentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
